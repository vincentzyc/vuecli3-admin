/* 创意相关的 */
.idea-list-img {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  position: relative;
  height: 60px;
  width: 80px;
  margin: auto;
  overflow: hidden;
  background-color: #2E291F;
}

.idea-list-img:hover {
  cursor: pointer;
}

.idea-list-img img {
  width: 100%;
}

.idea-list-icon {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -15px;
  margin-top: -15px;
  width: 30px;
  height: 30px;
  border-radius: 50%;
  border: 1px solid #ffffff;

  &::after {
    position: absolute;
    content: '';
    left: 40%;
    top: 50%;
    margin-top: -12px;
    width: 24px;
    height: 24px;
    border-top: 12px solid transparent;
    border-bottom: 12px solid transparent;
    border-left: 12px solid #1CCCF1;
    border-right: 12px solid transparent;
    box-sizing: border-box;
  }
}

.idea-iframe {
