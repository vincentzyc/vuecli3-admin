// 覆盖element-ui样式
.el-container {
  height: 100% !important;
  justify-content: center;
}

.hide-scrollbar::-webkit-scrollbar {
  display: none;
}

.hide-scrollbar::-moz-scrollbar {
  display: none;
}

.hide-scrollbar::-ms-scrollbar {
  display: none;
}

.el-form--inline {
  padding: 30px 30px 12px;
}

.el-loading-mask.is-fullscreen .el-loading-spinner {
  font-size: 50px;
}

.el-loading-mask.is-fullscreen .el-loading-spinner i, .el-loading-mask.is-fullscreen .el-loading-spinner .el-loading-text {
  color: #fff;
}

.el-table th.gutter {
  display: table-cell !important;
}

.el-select-dropdown.el-popper {
  max-width: 500px;
}

.el-tooltip__popper {
  max-width: 500px;
  line-height: 20px;
}

.el-month-table .current .cell {
  color: #fff !important;
  background-color: #409EFF;
}

.distribute-cascader .el-cascader-menu__wrap {
  height: 330px;
}

/* 覆盖element-ui样式 end */
