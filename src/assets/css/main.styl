/* 创意相关的 */
/* 预览类黑色蒙版列表 */
.templateList {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;

  .templateItem {
    width: 25%;

    .templateContent {
      margin-bottom: 20px;
      border: 1px solid #BCBCBC;
      position: relative;
      width: 96%;
    }
  }

  .imgWrap {
    position: relative;
    width: 95%;
    margin: 8px auto;
    height: 260px;
    background-color: #fff;
    overflow: hidden;

    &:hover {
      cursor: pointer;
    }

    .imgTitle {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      font-size: 12px;
      background-color: rgba(188, 188, 188, 0.6);
      padding: 5px;
      line-height: 20px;
      height: 48px;
      overflow: hidden;
    }
  }

  .imgWrap:hover .btnArr {
    opacity: 1;
  }

  .imgWrap img {
    width: 100%;
  }

  .btnArr {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.4);
    display: flex;
    justify-content: center;
    flex-direction: column;
    padding: 50px;
    transition: all 0.5s;
    opacity: 0;
  }

  .templateTitle {
    height: 70px;
    line-height: 70px;
    text-align: center;
    font-weight: 700;
    font-size: 14px;
    border-top: 1px solid #F2F2F2;
  }

  .lineSeg {
    height: 10px;
  }
}

